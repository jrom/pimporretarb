<div id="post" class="post">
  <h2><%= @post.title %></h2>
  <p><%= @post.content %></p>

  <p><a href="#comments" title="Comentaris" id="gotocomments"><%= @post.comments.size > 0 ? "#{@post.comments.size} " : "" %>Comentari<%= @post.comments.size != 1 ? "s" : "" %> &rarr;</a></p>
</div>

<div id="comments" class="comments">
  <p><a href="#" title="Entrada" id="gotopost">&larr; Entrada</a></p>
  <h2>Comentaris</h2>
  <% @post.comments.each do |comment| %>
    <div class="comment">
      <span class="author"><%= comment.author %></span>
      <span class="ago"></span>
      <p><%= comment.content %></p>
    </div>
  <% end %>
  <div class="comment-form">
    <form action="/comment" method="post">
      <input type="hidden" name="post" value="<%= @post.id %>" id="post">
      <label for="name">Nom</label><input type="text" name="name" value="" id="name">
      <label for="content">Comentari</label>
      <textarea id="content" name="content" rows="8" cols="40"></textarea>
      <input type="submit" name="sendcomment" value="Envia comentari" id="sendcomment">
    </form>
  </div>
</div>
